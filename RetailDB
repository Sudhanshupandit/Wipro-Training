CREATE DATABASE ReatailDB;
USE RetailDB;

CREATE TABLE Product (
ProdId INT PRIMARY KEY,
ProdName VARCHAR(100) NOT NULL,
Brand VARCHAR(50),
Price DECIMAL(10,2),
orderId INT
);

CREATE TABLE Orders(
orderId INT PRIMARY KEY,
CustomerName VARCHAR(100) NOT NULL,
OrderDate DATE,
City VARCHAR(50)
);

