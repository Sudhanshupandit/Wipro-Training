SELECT 
p.ProdId, p.ProdName, p.Brand, p.Price,
o.orderId, o.CustomerName, o.Orderdate, o.City
FROM Product p
INNER JOIN Orders o
ON p.orderId = o.orderId;

SELECT 
p.ProdId, p.ProdName, p.Brand, p.Price,
o.orderId, o.CustomerName, o.Orderdate, o.City
FROM Product p
LEFT JOIN Orders o
ON p.orderId = o.orderId;

SELECT 
p.ProdId, p.ProdName, p.Brand, p.Price,
o.orderId, o.CustomerName, o.Orderdate, o.City
FROM Product p
RIGHT JOIN Orders o
ON p.orderId = o.orderId;

